<h1>Your Order</h1>

<table class="table">
  <tr>
    <th>Item</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <%= link_to item.title, item_path(item) %>
  </tr>
  <% end %>
</table>

<table class="table">
  <tr>
    <th>Status: </th>
    <td><%= @order.status %></td>
  </tr>

  <tr>
    <th>Total: </th>
    <td><%= @order.total %></td>
  </tr>

  <tr>
    <th>Order Submitted: </th>
    <td><%= @order.created_at %></td>
  </tr>

  <tr>
    <th>Completed On: </th>
    <td><%= @order.updated_at %></td>
  </tr>

</table>
