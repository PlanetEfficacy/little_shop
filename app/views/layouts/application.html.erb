<!DOCTYPE html>
<html>
<head>
  <title>The Waddams Emporium</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'application', "https://fonts.googleapis.com/css?family=Quattrocento" %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  </div>

<div class="container">
  <div class="nav">
    <ul class="nav nav-tabs">
      <a class="navbar-brand" href="/">Waddams Emporium</a>
      <li role="presentation">
        <% if logged_in? %>
        <%= link_to "Logout", logout_path, method: :delete,  class: "nav-item nav-link"%>
        <% else %>
        <%= link_to "Login", login_path, class: "nav-item nav-link"%>
        <%= link_to "Create Account", new_user_path, class: "nav-item nav-link"%>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<% flash.each do |type, msg| %>
  <%= content_tag(:div, sanitize(msg), class: "alert alert-#{type}") %>
<% end %>

<div class="jumbotron">
  <div class="container">
    <h1>the waddams emporium</h1>
  </div>
</div>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
