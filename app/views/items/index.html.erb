

<h2>All Items</h2>


<% @items.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <% group.each do |item| %>
      <div class="col-md-4">
        <div class="item">
          <h4><%= item.title.capitalize %></h4>
          <p><%= number_to_currency(item.dollars) %></p>
          <p><%= image_tag item.image_url, class: 'thumbnail' %></p>
          <p><%= button_to "Add to Cart", cart_path(item_id: item.id), class: 'btn-btn-success'  %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>



<%= link_to "View Cart", cart_path%>
