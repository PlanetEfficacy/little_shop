<h1>The All-Powerful Admin Dashboard</h1>

<%= @user.username %>

<%= link_to "Account", edit_admin_user_path, class: "btn btn-primary" %>

<h2>All Orders</h2>
<!-- lets make this a table? -->
<% @orders.each do |order| %>
  <%= link_to order.id, order_path(order)%>
  <p>
    <% if can_be_cancelled?(order) %>
      <%= link_to "cancel", admin_orders_cancelled_path(:status => 2) %>
    <% end %>
  </p>
  <p>
    <% if order.ordered? %>
      <%= link_to "mark as paid", admin_orders_paid_path(:status => 1)%>
    <% end %>
  </p>
  <p>
    <% if order.completed? %>
      <%= link_to "mark as completed", admin_orders_completed_path(:status => 3) %>
    <% end %>
  </p>
<% end %>

<h2>Breakdown By Status</h2>

<%= link_to "Ordered", admin_orders_ordered_path(:status => 0)  %>: <%= @orders.ordered.count %></br>
<%= link_to "Paid", admin_orders_paid_path(:status => 1)  %>: <%=
@orders.paid.count %></br>
<%= link_to "Cancelled", admin_orders_cancelled_path(:status => 2)  %>: <%= @orders.cancelled.count %></br>
<%= link_to "Completed", admin_orders_completed_path(:status => 3)  %>: <%= @orders.completed.count %></br>


<%= link_to "Create an Item", new_item_path %>
